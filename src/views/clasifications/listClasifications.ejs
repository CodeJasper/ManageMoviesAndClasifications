<%- include('../fragments/header',{tabTitle:"Lista de clasificaciones", extraCss:[]}) %> 

<div class="container mt-5">
    <h1>Lista de clasificaciones</h1>

    <%- include('./registerClasification') %>     
    <%- include('./updateClasification') %>     
  


    <table class="table">
        <thead>
        <tr>
            <th scope="col"><div class="d-flex justify-content-center ">#</div></th>
            <th scope="col"> <div class="d-flex justify-content-center">Nombre</div></th>        
            <th scope="col"><div class="d-flex justify-content-center">Opciones</div></th>        
        </tr>
        </thead>
        <tbody>
            <% let index = 1 %>
            <% for(clasification of clasifications)  {%>         
                <tr>
                    <th scope="row">
                        <div class="d-flex justify-content-center">
                            <%= index %> </th>
                        </div>
                    <td>
                        <div class="d-flex justify-content-center"> 
                        <%= clasification.name %> 
                        </div>
                    </td>      
                    <td>     
                        <div class="d-flex justify-content-center">
                            <button  data-bs-toggle="modal" data-bs-target="#update-modal" id="update-clasification-button-<%=  clasification._id %>" type="button" class="btn btn-primary me-2">Actualizar</button>
                            <button id="delete-clasification-button-<%=  clasification._id %>" type="button" class="btn btn-danger ms-2">Eliminar</button>                    
                        </div>               
                    </td>    
                    <script src="/js/listClasification.js" data-idclasification="<%= clasification._id%>" data-nameclasification="<%= clasification.name%>"></script>
                </tr>
                <% index++ %> 
            <% } %>                     
        </tbody>
    </table>
</div>

<%- include('../fragments/footer') %> 


